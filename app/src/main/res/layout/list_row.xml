<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:background="@drawable/cus_list_row"
            android:layout_width="130dp"
            android:layout_height="80dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_row"

                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/meme_0"
                app:civ_border_color="#FF000000"
                app:civ_border_width="1dp" />
            <LinearLayout
                android:id="@+id/linear_info"

                android:layout_toEndOf="@id/img_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_NAME_row"

                    android:gravity="center"
                    android:background="@drawable/cus_textview"
                    android:textColor="#6A5ACD"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:text="NAME"/>

                <TextView
                    android:id="@+id/tv_PHONE_row"

                    android:background="@drawable/cus_textview2"
                    android:textColor="#EE2C2C"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:text="PHONE"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>